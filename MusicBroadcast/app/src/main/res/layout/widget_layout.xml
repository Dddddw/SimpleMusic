<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="187dp"
                android:layout_height="70dp">
    <ImageView
       android:layout_margin="5dp"
        android:id="@+id/music_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/one"/>
    <TextView
        android:id="@+id/music_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="未知歌名"
        android:layout_toRightOf="@id/music_image"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_name_text"
        android:layout_toRightOf="@id/music_image">
        <ImageView
            android:id="@+id/music_previous_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/previous"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/music_play_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/play"/>
        <ImageView
            android:id="@+id/music_next_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/next"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>